{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "diagnostics": true,
    "extendedDiagnostics": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noLib": false,
    "noEmit": true,
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es6",
      "dom",
      "es2015",
      "es2017.object",
      "es2016.array.include",
      "esnext.asynciterable",
      "esnext",
      "es2018"
    ],
    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
    "strict": true,
    "composite": true,
    "baseUrl": "./packages",
    "paths": {
      "@somo/pda-apps-*": ["./apps/*"],
      "@somo/pda-www-*": ["./apps/www/src/*"],
      "@somo/pda-components-*": ["./components/*"],
      "@somo/pda-pages-*": ["./pages/*"],
      "@somo/pda-utils-*": ["./utils/*"],
      "@somo/pda-graphql-*": ["./graphql/*"],
      "@somo/pda-hooks-*": ["./hooks/*"],
      "@somo/pda-layouts-*": ["./layouts/*"],
    }
  },
  "include": ["packages/**/*", "./global.d.ts", "./index.d.ts"],
  "exclude": ["node_modules", "./node_modules/*", ".cache", "packages/apps/e2e"]
}
